<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bb"
    tools:context="com.example.eslamashraf.hangman.PlayActivity">

   <LinearLayout
       android:background="@drawable/backgrountwo"
       android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
       android:layout_margin="10dp"
       android:padding="6dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="cursive"
                android:text="Categories :-"
                android:textColor="@android:color/black"
                android:textSize="40dp"
                android:textStyle="bold" />

       <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
           >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   android:layout_marginTop="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:textSize="25sp"
                            android:drawableLeft="@drawable/ic_movie"
                            android:textColor="@android:color/black"
                            android:id="@+id/Movies"
                            android:layout_width="match_parent"
                            android:padding="10dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/without_back"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Movies"
                            android:layout_marginBottom="10dp"/>
                    <TextView
                        android:textSize="25sp"
                        android:layout_marginBottom="10dp"
                        android:drawableLeft="@drawable/ic_animals"
                        android:textColor="@android:color/black"
                        android:id="@+id/Animals"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/without_back"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Animals" />
                    <TextView
                        android:textSize="25sp"
                        android:layout_marginBottom="10dp"
                        android:drawableLeft="@drawable/ic_sport"
                        android:textColor="@android:color/black"
                        android:id="@+id/Sports"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/without_back"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Sports" />
                    <TextView
                        android:textSize="25sp"
                        android:layout_marginBottom="10dp"
                        android:drawableLeft="@drawable/ic_doc_list"
                        android:textColor="@android:color/black"
                        android:id="@+id/vocabularies"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/without_back"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Vocabularies" />
                    <TextView
                        android:textSize="25sp"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/ic_planet"
                    android:textColor="@android:color/black"
                    android:id="@+id/countries"
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/without_back"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Countries" />
                    <TextView
                        android:textSize="25sp"
                        android:layout_marginBottom="10dp"
                        android:drawableLeft="@drawable/ic_free_breakfast"
                        android:textColor="@android:color/black"
                        android:id="@+id/food"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/without_back"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Food" />
                    <TextView
                        android:textSize="25sp"
                        android:layout_marginBottom="10dp"
                        android:drawableLeft="@drawable/ic_camera_enhance"
                        android:textColor="@android:color/black"
                        android:id="@+id/celebrates"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/without_back"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Celebrates" />
                </LinearLayout>

            </ScrollView>

        </LinearLayout>
</android.support.constraint.ConstraintLayout>
